category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:
    Yesod.Soap
    Yesod.Soap.Subsite
  other-modules:
    Yesod.Soap.Classes
    Yesod.Soap.Bindings
    Yesod.Soap.Common
    Yesod.Soap.Types
    Yesod.Soap.Wsdl
    Yesod.Soap.Bindings
    Yesod.Soap.Subsite.Foundation
    Yesod.Soap.Subsite.Dispatch
