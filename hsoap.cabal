  ghc-options: -ddump-splices -ddump-to-file

executable YesodTest
  main-is: test/YesodTest.hs
  build-depends:       base  >=4.8 && <5,
                       hxt,
                       text,
                       yesod,
                       yesod-core,
                       hsoap
  default-language: Haskell2010

Test-Suite all-tests
  default-language:    Haskell2010
  type: exitcode-stdio-1.0
  main-is: Main.hs
  other-modules:
    WsdlTest
  hs-source-dirs: test
  build-depends:
    base  >=4.8 && <5,
    HUnit-Plus,
    hxt,
    hsoap
